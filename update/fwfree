#!/bin/bash
###############################################
##  tahioN - IRC Shell Matrix                ##
##  (c) kofany & yooz                        ##
###############################################

# Cyberpunk color scheme
CYAN='\033[0;36m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
GRAY='\033[0;90m'
NC='\033[0m'

# Cyberpunk prompt
PRM="${CYAN}║${NC} ${YELLOW}⚡${NC} "

echo -e "${CYAN}╔═══[${YELLOW}⚡ tahioN FIREWALL_FLUSH ⚡${CYAN}]${NC}"
echo -e "${CYAN}║${NC}"
echo -e "${PRM}${RED}⧗ WARNING${NC} :: Flushing nftables ruleset"
echo -e "${CYAN}║${NC}"

nft flush ruleset

echo -e "${PRM}${YELLOW}⚙${NC} Ruleset flushed"
echo -e "${CYAN}║${NC}"
echo -e "${CYAN}╚═══════════════════[${GRAY}made with <3 kofany & yooz${CYAN}]${NC}"

exit 0

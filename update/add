#!/bin/bash
###############################################
##  tahioN - IRC Shell Matrix                ##
##  (c) kofany & yooz                        ##
###############################################

# Cyberpunk color scheme
CYAN='\033[0;36m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
RED='\033[0;31m'
GRAY='\033[0;90m'
NC='\033[0m'

# Cyberpunk prompt
PRM="${CYAN}║${NC} ${YELLOW}⚡${NC} "

# Root check
if [ "$EUID" -ne 0 ]; then
    echo -e "${CYAN}╔═══[${YELLOW}⚡ ACCESS DENIED ⚡${CYAN}]${NC}"
    echo -e "${PRM}${RED}Root privileges required${NC}"
    echo -e "${CYAN}╚═══════════════════[${GRAY}tahioN security${CYAN}]${NC}"
    exit 1
fi

# Interrupt handler
trap 'echo -e "\n${PRM}${YELLOW}⧗ Operation terminated${NC}"; exit 0' INT

# Username validation
if [ -z "${1}" ]; then
    echo -e "${CYAN}╔═══[${YELLOW}⚡ tahioN USER_ADD ⚡${CYAN}]${NC}"
    echo -e "${CYAN}║${NC}"
    echo -e "${PRM}${RED}✗ ACCESS DENIED${NC} :: No username provided"
    echo -e "${CYAN}║${NC}"
    echo -e "${PRM}Usage: add <username>"
    echo -e "${CYAN}║${NC}"
    echo -e "${CYAN}╚═══════════════════[${GRAY}kofany & yooz${CYAN}]${NC}"
    exit 1
fi

username=$1

# Cyberpunk confirmation
echo -e "${CYAN}╔═══[${YELLOW}⚡ tahioN USER_ADD ⚡${CYAN}]${NC}"
echo -e "${CYAN}║${NC}"
echo -e "${PRM}${YELLOW}⬢${NC} Initialize new user account in the matrix"
echo -e "${PRM}${CYAN}➜${NC} Username: ${YELLOW}${username}${NC}"
echo -e "${CYAN}║${NC}"

while true; do
    echo -ne "${PRM}${GREEN}Deploy user? [y/n]${NC} "
    read -r -s -N 1 REPLY
    echo ""

    if [ "${REPLY}" = "n" ]; then
        echo -e "${CYAN}║${NC}"
        echo -e "${PRM}${YELLOW}⧗ Deployment cancelled${NC}"
        echo -e "${CYAN}║${NC}"
        echo -e "${CYAN}╚═══════════════════[${GRAY}kofany & yooz${CYAN}]${NC}"
        exit 0
    elif [ "${REPLY}" = "y" ]; then
        break
    fi
done

# Check if user exists
if id "${username}" &>/dev/null; then
    echo -e "${CYAN}║${NC}"
    echo -e "${PRM}${RED}✗ ACCESS DENIED${NC} :: User already exists in the matrix"
    echo -e "${CYAN}║${NC}"
    echo -e "${CYAN}╚═══════════════════[${GRAY}kofany & yooz${CYAN}]${NC}"
    exit 1
fi

# Generate secure password
password=$(tr -dc 'a-zA-Z0-9!@#$%^&*()_+-' </dev/urandom | head -c 12)

# Create user with zsh
echo -e "${CYAN}║${NC}"
echo -e "${PRM}${GREEN}✓ ACCESS GRANTED${NC} :: Deploying user matrix"
echo -e "${CYAN}║${NC}"

# Ensure /home directory exists
mkdir -p /home

# Create user with zsh as default shell
useradd -d /home/${username} -m ${username} -s /bin/zsh
echo "${username}:${password}" | chpasswd

# Set home directory permissions
chmod 711 /home/${username}

# Initialize shell history files
touch /home/${username}/.bash_history
touch /home/${username}/.zsh_history
chown -R ${username}:${username} /home/${username}/.bash_history
chown -R ${username}:${username} /home/${username}/.zsh_history
chmod 700 /home/${username}/.bash_history
chmod 700 /home/${username}/.zsh_history
chattr +a /home/${username}/.bash_history
chattr +a /home/${username}/.zsh_history

# Create public_html directory
mkdir -p /home/${username}/public_html
chown -R ${username}:${username} /home/${username}/public_html

# Set resource limits
echo "${username} hard nproc 99" >> /etc/security/limits.conf
echo "${username} - maxlogins 99" >> /etc/security/limits.conf

# Display credentials
echo -e "${PRM}${YELLOW}⚙${NC} User deployed successfully"
echo -e "${CYAN}║${NC}"
echo -e "${PRM}${CYAN}╔═══[ USER CREDENTIALS ]${NC}"
echo -e "${PRM}${CYAN}║${NC}"
echo -e "${PRM}${CYAN}║${NC}  ${GREEN}➜${NC} Username: ${YELLOW}${username}${NC}"
echo -e "${PRM}${CYAN}║${NC}  ${GREEN}➜${NC} Password: ${YELLOW}${password}${NC}"
echo -e "${PRM}${CYAN}║${NC}  ${GREEN}➜${NC} Shell:    ${CYAN}/bin/zsh${NC}"
echo -e "${PRM}${CYAN}║${NC}  ${GREEN}➜${NC} Home:     ${CYAN}/home/${username}${NC}"
echo -e "${PRM}${CYAN}║${NC}"
echo -e "${PRM}${CYAN}╚═══════════════════${NC}"
echo -e "${CYAN}║${NC}"
echo -e "${PRM}${RED}⧗ WARNING${NC} :: Save these credentials securely"
echo -e "${CYAN}║${NC}"
echo -e "${CYAN}╚═══════════════════[${GRAY}kofany & yooz${CYAN}]${NC}"

exit 0
